<p style="color: green"><%= notice %></p>

<div class="container-fluid py-1 bg-light">
  <h1 class="display-5 fw-bold">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
        
  <p class="lead"><%= @friend.email %> | <%= @friend.phone %> | <%= @friend.twitter %></p>        
  
  <%= link_to "Edit this friend", edit_friend_path(@friend), class: "btn btn-primary" %>
  <%= link_to "Back to friends", friends_path, class: "btn btn-secondary"  %>
  <%= link_to "Destroy this friend", @friend, method: :delete, class: "btn btn-danger" %>

  </div>

