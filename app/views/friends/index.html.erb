<p class="alert"><%= alert %></p>


<% if user_signed_in? %>

<h1>Friends</h1>

<table id="friends" class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
      
      <tr>
        <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
      </tr>

      <% end %>
    <% end %>
  </tbody>
</table>


<button type="button" class="btn btn-success">
  <%= link_to "New friend", new_friend_path, class:"btn btn-success" %>
</button>

<% else %>

<h1>Hello World</h1>
This is my first rails webpage...

<% end %>